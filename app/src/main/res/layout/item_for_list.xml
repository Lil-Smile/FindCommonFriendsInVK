<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:background="@color/background">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivPhoto"
            />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llItem">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unknown"
                        android:id="@+id/tvName" android:textColor="@color/foreground" android:typeface="serif"
                        android:textSize="@dimen/textSize"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/unknown"
                          android:id="@+id/tvSurname"
                          android:layout_marginLeft="@dimen/marginOneItem"
                          android:textColor="@color/foreground" android:typeface="serif"
                          android:textSize="@dimen/textSize"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/id"
                        android:textColor="@color/foreground" android:typeface="serif" android:textSize="@dimen/textSize"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unknown"
                        android:id="@+id/tvID"
                        android:textColor="@color/foreground" android:typeface="serif" android:textSize="@dimen/textSize"/>
            </LinearLayout>

        </LinearLayout>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxOfFriend"
                android:focusable="false"
                android:enabled="false"
                android:layout_marginLeft="40dp"
                />
    </LinearLayout>

</LinearLayout>