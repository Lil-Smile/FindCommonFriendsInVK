<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yourFriends"
            android:id="@+id/tvYourFriends" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:focusableInTouchMode="true"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/lvHeightLand"
            android:id="@+id/lvMyFriendsList"
            android:layout_centerVertical="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvYourFriends"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find"
            android:id="@+id/buttonFindCommonFromMyFriends" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:layout_below="@+id/lvMyFriendsList"/>
    <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarMyFriendsList"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>
</RelativeLayout>